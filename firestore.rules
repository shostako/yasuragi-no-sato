rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ヘルパー関数: ログイン済みユーザーかどうか
    function isAuthenticated() {
      return request.auth != null;
    }

    // ヘルパー関数: 管理者かどうか
    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ヘルパー関数: 自分のドキュメントかどうか
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // contacts コレクション
    // - 誰でも追加可（お問い合わせ送信）
    // - 自分のお問い合わせは読み取り可（uid一致）
    // - 編集・削除は管理者のみ
    match /contacts/{contactId} {
      allow create: if true;
      allow read: if isAdmin() || (isAuthenticated() && resource.data.uid == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    // reservations コレクション
    // - 誰でも追加可（見学予約申込み）
    // - 自分の予約は読み取り可（uid一致）
    // - 編集・削除は管理者のみ（個人情報保護）
    match /reservations/{reservationId} {
      allow create: if true;
      allow read: if isAdmin() || (isAuthenticated() && resource.data.uid == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    // bookedSlots コレクション（予約済み枠の公開情報）
    // - 誰でも読み取り可（カレンダー表示用）
    // - 誰でも追加可（予約作成時、reservationsと同時書き込み）
    // - 削除は管理者のみ（キャンセル時）
    match /bookedSlots/{slotId} {
      allow read: if true;
      allow create: if true;
      allow update: if false;
      allow delete: if isAdmin();
    }

    // news コレクション
    // - 公開済み かつ 会員限定でない → 誰でも読み取り可
    // - 公開済み かつ 会員限定 → 認証ユーザーのみ読み取り可
    // - 未公開は管理者のみ読み取り可
    // - 作成・編集・削除は管理者のみ
    match /news/{newsId} {
      allow read: if isAdmin() ||
        (resource.data.published == true && (resource.data.memberOnly != true || isAuthenticated()));
      allow create, update, delete: if isAdmin();
    }

    // users コレクション
    // - 自分のドキュメントまたは管理者のみ読み取り可
    // - 作成は自分のドキュメントかつrole=memberのみ（サインアップ時）
    // - 更新は自分のドキュメントかつroleの変更は禁止
    // - 削除は禁止
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.role == 'member';
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
      allow delete: if false;
    }

    // その他のコレクションはすべて拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
