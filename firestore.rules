rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ヘルパー関数: ログイン済みユーザーかどうか
    function isAuthenticated() {
      return request.auth != null;
    }

    // ヘルパー関数: 管理者かどうか
    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ヘルパー関数: 自分のドキュメントかどうか
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // contacts コレクション
    // - 誰でも追加可（お問い合わせ送信）
    // - 読み取り・編集・削除は管理者のみ
    match /contacts/{contactId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // reservations コレクション
    // - 誰でも追加可（見学予約申込み）
    // - 読み取り・編集・削除は管理者のみ（個人情報保護）
    match /reservations/{reservationId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // news コレクション
    // - 公開済み（published == true）は誰でも読み取り可
    // - 未公開は管理者のみ読み取り可
    // - 作成・編集・削除は管理者のみ
    match /news/{newsId} {
      allow read: if resource.data.published == true || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // users コレクション
    // - 自分のドキュメントまたは管理者のみ読み取り可
    // - 作成は自分のドキュメントかつrole=memberのみ（サインアップ時）
    // - 更新は自分のドキュメントかつroleの変更は禁止
    // - 削除は禁止
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.role == 'member';
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
      allow delete: if false;
    }

    // その他のコレクションはすべて拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
